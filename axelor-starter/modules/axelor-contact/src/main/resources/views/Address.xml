<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.2.xsd">

  <grid name="address-grid" title="Addresses" model="com.axelor.contact.db.Address">
    <field name="contact" />
    <field name="street" />
    <field name="area" />
    <field name="city" />
    <field name="zip" />
  </grid>

  <form name="address-form" title="Address" model="com.axelor.contact.db.Address">
    <panel title="Overview">
      <field name="street" />
      <field name="area" />
      <field name="city" />
      <field name="zip" />
      <field name="fullAddress"></field>
    </panel>
  </form>

</object-views>
